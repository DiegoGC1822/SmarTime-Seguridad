{
  "name": "SmarTime Blocker",
  "description": "Extensión que bloquea páginas distractoras como TikTok, Facebook e Instagram.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["webRequest", "webRequestBlocking"],
  "host_permissions": [
    "*://*.tiktok.com/*",
    "*://*.facebook.com/*",
    "*://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "image.png"
  }
}
