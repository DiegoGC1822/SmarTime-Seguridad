{
  "name": "SmarTime Blocker",
  "description": "Extensión que bloquea páginas distractoras como TikTok, Facebook e Instagram.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "128": "image.png"
  }
}
